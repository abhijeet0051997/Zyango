<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="4dp"
        android:background="@drawable/message_from_layout"
        android:maxWidth="250dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:text="hello how are you"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="12:60 pm"
            android:textColor="@color/colorGrey"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/seen_image"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="22dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_baseline_check_circle_24px" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bubble2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/message_to_layout"
        android:maxWidth="250dp"
        android:paddingLeft="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/message2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:text="hello how are you"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="12:60 pm"
            android:textColor="@color/colorGrey"
            android:textSize="10sp" />

    </LinearLayout>


</LinearLayout>
